<body>

<h1>Responsive Image Gallery</h1>

<!-- FILTER BUTTONS -->
<div class="filters">
    <button onclick="filterImages('all')">All</button>
    <button onclick="filterImages('nature')">Nature</button>
    <button onclick="filterImages('city')">City</button>
    <button onclick="filterImages('animals')">Animals</button>
</div>

<!-- GALLERY -->
<div class="gallery" id="gallery">
    <img src="https://picsum.photos/id/1015/600/400" data-cat="nature">
    <img src="https://picsum.photos/id/1025/600/400" data-cat="animals">
    <img src="https://picsum.photos/id/1035/600/400" data-cat="city">
    <img src="https://picsum.photos/id/1040/600/400" data-cat="nature">
    <img src="https://picsum.photos/id/1062/600/400" data-cat="animals">
    <img src="https://picsum.photos/id/1074/600/400" data-cat="city">
</div>

<!-- LIGHTBOX -->
<div class="lightbox" id="lightbox">
    <button class="close" onclick="closeLightbox()">✖</button>
    <button class="prev" onclick="prevImage()">❮</button>
    <img id="lightImg">
    <button class="next" onclick="nextImage()">❯</button>
</div>

<script>
let images = document.querySelectorAll(".gallery img");
let lightbox = document.getElementById("lightbox");
let lightImg = document.getElementById("lightImg");
let currentIndex = 0;

/* -------- OPEN LIGHTBOX -------- */
images.forEach((img, index) => {
    img.addEventListener("click", () => {
        lightbox.style.display = "flex";
        lightImg.src = img.src;
        currentIndex = index;
    });
});

/* -------- CLOSE -------- */
function closeLightbox() {
    lightbox.style.display = "none";
}

/* -------- NEXT -------- */
function nextImage() {
    currentIndex = (currentIndex + 1) % images.length;
    lightImg.src = images[currentIndex].src;
}

/* -------- PREV -------- */
function prevImage() {
    currentIndex = (currentIndex - 1 + images.length) % images.length;
    lightImg.src = images[currentIndex].src;
}

/* -------- FILTER -------- */
function filterImages(category) {
    images.forEach(img => {
        if (category === "all" || img.dataset.cat === category) {
            img.style.display = "block";
        } else {
            img.style.display = "none";
        }
    });
}
</script>

</body>
</html>
